#ifndef HISTORY_H_
#define HISTORY_H_
#define HISTORY_DEFAULT_SIZE 100
#define CTRL_D 4
#include <menu.h>

template <class HistoryItem>
class History {
public:
	History(int size=HISTORY_DEFAULT_SIZE);
	void append(HistoryItem *);
	void goPastEnd();
	HistoryItem *up();
	HistoryItem *down();
	int getCount() {return count;}
	int getSize() {return size;}
	HistoryItem *  showHistory();
	void drawmenu(WINDOW *win, int starty, int startx, int width, std::string str, chtype color);
	void UnpostAndFree(MENU *my_menu, int n_choices, ITEM **my_items);
	virtual ~History();
private:
	struct element {
		HistoryItem *item;
		struct element *next, *prev;
	};
	struct element *first, *last, *current;
	int size;
	int count;
};

#include "History.cpp"

#endif /* HISTORY_H_ */
